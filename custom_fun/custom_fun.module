/*
 * Implements hook_block_info()
 */
function custom_fun_block_info() {
  foreach (_custom_fun_get_blocks_var_keys() as $delta => $block_set) {
    $blocks[$delta] = array(
      'info' => $block_set['info'],
      'cache' => DRUPAL_NO_CACHE
    );
  }
  return $blocks;
}

